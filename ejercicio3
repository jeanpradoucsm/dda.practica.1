  <script>
    // Validación simple de contraseñas coincidentes
    const pwd = document.getElementById('password');
    const confirmPwd = document.getElementById('confirm');
    const match = document.getElementById('match');
    const form = document.getElementById('signup');

    function check(){
      if(!pwd.value || !confirmPwd.value){ match.textContent=''; return; }
      if(pwd.value === confirmPwd.value){ match.textContent='✔ Las contraseñas coinciden'; match.className='status ok'; }
      else { match.textContent='✖ Las contraseñas no coinciden'; match.className='status err'; }
    }
    pwd?.addEventListener('input', check);
    confirmPwd?.addEventListener('input', check);
    form?.addEventListener('submit', (e)=>{
      if(!form.checkValidity()){
        e.preventDefault();
        form.reportValidity();
        return;
      }
      if(pwd.value !== confirmPwd.value){
        e.preventDefault();
        confirmPwd.focus();
        match.textContent='✖ Las contraseñas no coinciden'; match.className='status err';
      }
    });
  </script>
